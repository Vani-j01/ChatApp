<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/user_image"/>

    <TextView
        android:id="@+id/message_receiver_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/receiver_message_layout"
        android:text="receiver messages here"
        android:padding="15dp"
        android:layout_marginStart="2dp"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/message_receiver_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/receiver_message_layout"
        android:text="Click here to view the file"
        android:padding="15dp"
        android:layout_marginStart="2dp"
        android:textSize="14sp"
        app:drawableLeftCompat="@drawable/email" />

    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/message_sender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/message_receiver_text"
        android:background="@drawable/sender_message_layout"
        android:text="sender messages here"
        android:textSize="14sp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/message_sender_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/message_receiver_text"
        android:drawablePadding="5dp"
        android:background="@drawable/sender_message_layout"
        android:text="CLick here to view the file"
        android:textSize="14sp"
        android:padding="10dp"
        app:drawableLeftCompat="@drawable/email" />


</RelativeLayout>