<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chats">



    <TextView
        android:id="@+id/chat_frag_default_message"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_margin="20dp"
        android:background="@drawable/sender_message_layout"
        android:padding="5dp"
        android:text="You have no friends to chat with right now. Go to Find Friends and Start sending people chat requests!!"/>


    <androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chats_list"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    />
</RelativeLayout>